        <Label Content="Constitution Wizard: Step 2" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <GroupBox Header="Members" Margin="10,46,25,164" RenderTransformOrigin="0.315,-1.711">
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <Button Content="Add New Member" Click="AddMember" Margin="10,10,10,0" Width="120" HorizontalAlignment="Left"/>
